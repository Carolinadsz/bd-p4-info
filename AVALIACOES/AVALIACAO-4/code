CREATE TABLE T_PROFESSOR (
  PROFESSOR_ID INTEGER PRIMARY KEY AUTOINCREMENT,
  NOME_PROFESSOR TEXT NOT NULL,
  DATA_NASC_PROF TEXT NOT NULL
);

CREATE TABLE T_ALUNO (
  ALUNO_ID INTEGER PRIMARY KEY AUTOINCREMENT,
  NOME_ALUNO TEXT NOT NULL,
  DATA_NASC_ALUNO TEXT NOT NULL
);

CREATE TABLE T_DISCIPLINA (
  DISCIPLINA_ID INTEGER PRIMARY KEY AUTOINCREMENT,
  NOME_DISCIPLINA TEXT NOT NULL
);

CREATE TABLE T_MATRICULA (
  ID INTEGER PRIMARY KEY AUTOINCREMENT,
  DATA_MATRICULA TEXT NOT NULL,
  ALUNO_ID INTEGER NOT NULL,
  DISCIPLINA_ID NOT NULL,
  FOREIGN KEY (ALUNO_ID)
    REFERENCES T_ALUNO (ALUNO_ID),
  FOREIGN KEY (DISCIPLINA_ID)
    REFERENCES T_DISCIPLINA (DISCIPLINA_ID)
  
);
  
INSERT INTO T_PROFESSOR (NOME_PROFESSOR, DATA_NASC_PROF)
VALUES('Ricardo Duarte Taveira', '18/12/1999');

INSERT INTO T_ALUNO (NOME_ALUNO, DATA_NASC_ALUNO)
VALUES('Carolina Severo de Souza', '18/12/2005');

INSERT INTO T_DISCIPLINA (NOME_DISCIPLINA)
VALUES('Banco de Dados');

INSERT INTO T_MATRICULA (ALUNO_ID, DISCIPLINA_ID, DATA_MATRICULA)
  VALUES (1, 1, '24/03/2023');

